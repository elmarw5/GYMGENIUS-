// PÃ¡gina Web IA Rutinas Personalizadas

import React, { useState } from 'react'; import { Card, CardContent } from "@/components/ui/card"; import { Button } from "@/components/ui/button"; import { Input } from "@/components/ui/input"; import { Textarea } from "@/components/ui/textarea"; import { motion } from 'framer-motion';

const questions = [ { id: 1, question: "Â¿CuÃ¡l es tu objetivo principal?", options: ["Hipertrofia", "PÃ©rdida de grasa", "PliometrÃ­a", "Fuerza", "Movilidad"] }, { id: 2, question: "Â¿CuÃ¡ntos dÃ­as puedes entrenar a la semana?", options: ["2", "3", "4", "5", "6+"] }, { id: 3, question: "Â¿DÃ³nde entrenas normalmente?", options: ["Gimnasio", "Casa", "Parque"] }, { id: 4, question: "Â¿QuÃ© equipamiento tienes disponible?", options: ["Mancuernas", "Bandas", "Barra", "Peso corporal"] }, ];

const RoutineBuilder = () => { const [answers, setAnswers] = useState({}); const [step, setStep] = useState(0); const [routine, setRoutine] = useState(null);

const handleAnswer = (id, answer) => { setAnswers(prev => ({ ...prev, [id]: answer })); if (step < questions.length - 1) { setStep(step + 1); } else { generateRoutine(); } };

const generateRoutine = () => { const { 1: objetivo, 2: dias, 3: lugar, 4: equipo } = answers; let generated = `Â¡Perfecto! Te presento una rutina para ${objetivo.toLowerCase()} entrenando ${dias} dÃ­as a la semana en ${lugar.toLowerCase()} usando ${equipo.toLowerCase()}.

; generated += Cada sesiÃ³n incluirÃ¡ calentamiento, bloque principal y estiramientos. AdemÃ¡s, tendrÃ¡s gifs y vÃ­deos para cada ejercicio, informaciÃ³n de posibles lesiones y recomendaciones de equipo.`; setRoutine(generated); };

return ( <div className="max-w-2xl mx-auto p-4 space-y-4"> <motion.h1 className="text-3xl font-bold text-center" initial={{ opacity: 0 }} animate={{ opacity: 1 }}> ğŸ”¥ Tu Rutina Personalizada con IA </motion.h1> {!routine ? ( <Card> <CardContent className="space-y-4 p-4"> <h2 className="text-xl font-semibold">{questions[step].question}</h2> <div className="grid grid-cols-2 gap-2"> {questions[step].options.map(option => ( <Button key={option} onClick={() => handleAnswer(questions[step].id, option)}> {option} </Button> ))} </div> </CardContent> </Card> ) : ( <Card> <CardContent className="space-y-4 p-4"> <h2 className="text-xl font-semibold">ğŸ¯ Resultado</h2> <Textarea value={routine} readOnly rows={8} /> <Button onClick={() => setStep(0) || setRoutine(null) || setAnswers({})}> Crear otra rutina </Button> </CardContent> </Card> )} </div> ); };

export default RoutineBuilder;

